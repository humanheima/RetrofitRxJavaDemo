<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:id="@+id/activity_retrofit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="展示结果" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="getMovie"
                android:text="@string/get_movie" />

            <TextView
                android:id="@+id/text_movie_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="展示结果" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="getNowWeather"
                android:text="@string/get_today_weather" />

            <TextView
                android:id="@+id/text_weather_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="展示结果" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="getHistoryWeather"
                android:text="@string/get_history_weather" />

            <TextView
                android:id="@+id/text_history_weather_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="展示结果" />

        </LinearLayout>

    </ScrollView>
</layout>

